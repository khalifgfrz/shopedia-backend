{
  "version": 2,
  "installCommand": "pnpm install",
  "buildCommand": "pnpm build",
  "functions": {
    "api/*.ts": {
      "runtime": "nodejs16.x"
    }
  },
  "builds": [
    {
      "src": "dist/main.js",
      "use": "@vercel/node"
    }
  ],
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ]
}
